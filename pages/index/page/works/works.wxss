
.container {
  padding: 0 26rpx;
  position: relative;
  overflow-y: scroll;
}

.container .title {
  padding: 26rpx 0;
  font-size: 38rpx;
  color: #000;
  border-bottom: 2px solid #333;
  text-align: center;
}

.container .rank {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx 0 30rpx;
  border-bottom: 1px solid #333;
}

.container .rank .avatar {
  width: 120rpx;
  margin-right: 10rpx;
  text-align: center;
}

.container .rank .avatar .rank_num {
  height: 22rpx;
  width: 100rpx;
  margin-bottom: 8rpx;
}

.container .rank .avatar .head {
  height: 120rpx;
  width: 120rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
}

.container .rank .person_msg {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -moz-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  -moz-box-orient: vertical;
  -moz-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: space-around;
  -ms-flex-pack: distribute;
  justify-content: space-around;
}

.container .rank .person_msg .name {
  font-size: 36rpx;
}

.container .rank .person_msg .code {
  color: red;
  margin-right: 10rpx;
}

.container .rank .person_msg .code_wrap, .money_wrap {
  font-size: 28rpx;
}

.container .rank .person_msg .money {
  color: #ff9600;
  margin-right: 10rpx;
}

.container .rank .works {
  width: 220rpx;
  height: 160rpx;
  border: 1px solid #ffd001;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  background: white;
}

.container .rank .works image {
  width: 100%;
  height: 100%;
}

.again {
  position: fixed;
  bottom: 30rpx;
  left: 255rpx;
  background: red;
  color: white;
  width: 260rpx;
  font-weight: bold;
}
