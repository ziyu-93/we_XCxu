/* 选词 */
.choose_word_wrap{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: none;
}
.answer_show{
  display: block;
}
.choose_word_wrap_close{
  display: block;
}
.choose_word{
  width: 65%;
  height: 424rpx;
  padding: 28rpx 70rpx 0;
  text-align: center;
  background-color: white;
  margin: 330rpx auto 0;
  border:3px solid #FFD001;
}
.works_show{
  text-align: left;
  padding: 14rpx 30rpx;
  font-size: 28rpx;
}
.works_show image{
  width: 100%;
  height: 330rpx;
  margin: 0 auto;
}
.next_game{
  text-align: center;
}
.works_show .over_time{
  color: red;
  margin: 0 8rpx;
}
.choose_word .title{
  font: 26rpx;
  margin-bottom: 28rpx;
  color: #DF3636;
  font-weight: bold;
}
.choose_word .word{
  height: 60rpx;
  font-size: 36rpx;
  background: white;
  border: 1px solid #333;
  border-radius: 10px;
  margin-bottom: 14rpx;
  line-height: 60rpx;
}
.choose_word .annotate{
  font-size: 24rpx;
  color: #999;
}
.choose_word .time_reduce{
  font-size: 26rpx;
  margin-top: 10rpx;
}
.choose_word .time_reduce text{
  color: red;
  margin: 0 10rpx;
}
.answer{
  width: 340rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 38rpx;
  color: white;
  background: black;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: #FFD001; 
  border-radius: 5px;
  z-index: 999;
}
.answer image{
  height: 150rpx;
  width: 280rpx;
  margin: 25rpx 30rpx;
}
.cover{
  position: absolute;
  top: 0;
  bottom: 28%;
  width: 100%;
  z-index: 999;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}
.show{
  opacity: 1;
}
.hide{
  opacity: 0;
}
.frtion_top{
  color: red;
}
.frtion_ct{
  color: blue;
}